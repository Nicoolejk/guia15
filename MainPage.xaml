<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Navegacion.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="60"
            Padding="20,0"
            VerticalOptions="Center"
            BackgroundColor="Grey">

            <Image
                Source="dotnet_bot.png"
                SemanticProperties.Description="Cute dot net bot waving hi to you!"
                HeightRequest="200"
                HorizontalOptions="Center" />


            <Button BackgroundColor="LightPink" Text="App Cambio" x:Name="Cambio" Clicked="Cambio_Clicked" HorizontalOptions="Center" />
            <Button BackgroundColor="Purple" Text="App Dino" x:Name="Dino" Clicked="Dino_Clicked" HorizontalOptions="Center"/>
            <Button BackgroundColor="Aquamarine" Text="App Gas" x:Name="Gas" Clicked="Gas_Clicked" HorizontalOptions="Center" />
            <Button BackgroundColor="LawnGreen" Text="App Superficie" x:Name="Superficie" Clicked="Superficie_Clicked" HorizontalOptions="Center"/>
            <Button BackgroundColor="RosyBrown" Text="Acerca de nosotros" x:Name="Acerca" Clicked="Acerca_Clicked" HorizontalOptions="Center"/>
            
            

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
