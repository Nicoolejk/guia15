<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Navegacion.Cambio"
             Title="Cambio">
    <ScrollView>
        <StackLayout>
            <VerticalStackLayout
                Spacing="60"
            Padding="20"
            VerticalOptions="Center"
            Background="aqua">


                <Image
                Source="dinerou.png"
                SemanticProperties.Description="Cute dot net bot waving hi to you!"
                HeightRequest="200"
                HorizontalOptions="Center" />
        
        <Label Text="Cantidad 1" />
        <Entry x:Name="txtCantidad1" Keyboard="Numeric" />

        <Label Text="Cantidad 2" />
        <Entry x:Name="txtCantidad2" Keyboard="Numeric" />

        <Button Text="Restar" Clicked="Restar_Clicked" />

        <Label x:Name="lblResultado" />
        </VerticalStackLayout>
    </StackLayout>
    </ScrollView>




</ContentPage>