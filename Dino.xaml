<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Navegacion.Dino"
             Title="Dino">
    <ScrollView>
    <StackLayout>
            <VerticalStackLayout
        Spacing="60"
            Padding="10"
            VerticalOptions="Center">


                <Image
                Source="dinosaurio.jpg"
                SemanticProperties.Description="Cute dot net bot waving hi to you!"
                HeightRequest="200"
                HorizontalOptions="Center" />
        
        <Label Text="Nombre del dinosaurio" />
        <Entry x:Name="txtNombre" />

        <Label Text="Peso (kg)" />
        <Entry x:Name="txtPeso" Keyboard="Numeric" />

        <Label Text="Altura (m)" />
        <Entry x:Name="txtAltura" Keyboard="Numeric" />

        <Button Text="Calcular" Clicked="Calcular_Clicked" />

        <Label x:Name="lblResultado" />
        </VerticalStackLayout>
    </StackLayout>
    </ScrollView>

</ContentPage>